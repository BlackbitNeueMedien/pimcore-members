        "action": "email",
        "template": "/members/email/email.php",
        "data": {
            "de": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Account aktivieren"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Bitte bestätigen Sie Ihre Registrierung <a href=\"%Text(host);/de/members/confirm?hash=%Object(member_id,{'method': 'getConfirmHash'});\">hier</a>.</p>"
                }
            ],
            "en": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Activate your account"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Please confirm your account <a href=\"%Text(host);/en/members/confirm?hash=%Object(member_id,{'method': 'getConfirmHash'});\">here</a>.</p>"
                }
            ]
        }
    },
    {
        "type": "email",
        "path": "members/emails",
        "key": "register-notification",
