<form action="{{ loginUri }}" method="post">
    <input type="hidden" name="back" value="{{ back }}" />
    {% if areaMode is defined and areaMode == true %}
        <input type="hidden" name="lang" value="{{ app.request.locale }}" />
        <input type="hidden" name="origin" value="{{ origin is defined ? origin : '' }}" />
    {% endif %}

    <div class="form-group {{ error is defined ? 'has-error' : '' }}">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-fw fa-user"></i></span>
            <input type="email" class="form-control input-lg" name="email" placeholder="{{ 'Email'|trans }}">
        </div>
    </div>

    <div class="form-group {{ error is defined ? 'has-error' : '' }}">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-fw fa-lock"></i></span>
            <input type="password" class="form-control input-lg" name="password" placeholder="{{ 'Password'|trans }}">
        </div>
    </div>

    {% if error is defined and error is not empty %}
        <div class="form-group has-error">
            <span class="help-block">{{ error }}</span>
        </div>
    {% endif %}

    <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'members.layout.login'|trans }}</button>

    <div class="row">
        <div class="col-sm-6">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="remember">
                    {{ 'Remember me'|trans }}
                </label>
            </div>
        </div>
        <div class="col-sm-6">
            <p class="forgot-pwd">
                <a href="<?= \Members\Model\Configuration::getLocalizedPath('routes.passwordRequest') ?>">
                    {{ 'Forgot your password?'|trans }}
                </a>
            </p>
        </div>
    </div>

</form>